# Allow vendor_init to set vendor_persist_camera_prop
set_prop(vendor_init, vendor_camera_prop)
set_prop(vendor_init, vendor_persist_camera_prop)

# Allow vendor_init to write to vm, clk debugfs and energy aware sysfs
allow vendor_init {
  vendor_debugfs_clk
  proc_dirty
  proc_sched_energy_aware
}:file w_file_perms;

# Allow vendor_init to set Powerhal properties
set_prop(vendor_init, vendor_power_prop)

# Allow vendor init to set thermal property
set_prop(vendor_init, vendor_thermal_prop)

# Allow init to bind mount dsp file
allow init adsprpcd_file:file mounton;

# Allow init to read last_kmsg file
allow init proc_last_kmsg:file r_file_perms;

#============= vendor_init ==============
allow vendor_init default_prop:file read;
allow vendor_init mnt_vendor_file:lnk_file read;
allow vendor_init persist_debug_prop:file read;
allow vendor_init system_data_file:dir { create ioctl open read setattr };
